# Applications
cmd - return : /Applications/WezTerm.app/Contents/MacOS/wezterm
cmd + ctrl - b : open "/Applications/Brave Browser.app"
cmd + ctrl - s : open /Applications/Spotify.app
cmd + shift + ctrl - r : yabai --restart-service
cmd + shift + ctrl - s : skhd --restart-service

ctrl - 0x033 : skhd -k "alt - 0x033"

# create and destroy spaces
cmd + ctrl - n : yabai -m space --create
cmd + ctrl - d : yabai -m space --destroy

# focus spaces
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6

# move window to space and follow focus
cmd + shift - 1 : yabai -m window --space 1
cmd + shift - 2 : yabai -m window --space 2
cmd + shift - 3 : yabai -m window --space 3
cmd + shift - 4 : yabai -m window --space 4
cmd + shift - 5 : yabai -m window --space 5
cmd + shift - 6 : yabai -m window --space 6

# focus windows
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# swap windows
cmd + shift - h : yabai -m window --swap west
cmd + shift - j : yabai -m window --swap south
cmd + shift - k : yabai -m window --swap north
cmd + shift - l : yabai -m window --swap east

# resize windows
cmd + alt - h : yabai -m window west --resize right:-20:0 2> /dev/null || yabai -m window --resize right:-20:0
cmd + alt - j : yabai -m window north --resize bottom:0:20 2> /dev/null || yabai -m window --resize bottom:0:20
cmd + alt - k : yabai -m window south --resize top:0:-20 2> /dev/null || yabai -m window --resize top:0:-20
cmd + alt - l : yabai -m window east --resize left:20:0 2> /dev/null || yabai -m window --resize left:20:0


# toggle window floating
cmd + shift - space : yabai -m window --toggle float;\
          yabai -m window --grid 5:5:1:1:3:3


# equalize size of windows
cmd + shift - 0 : yabai -m space --balance

