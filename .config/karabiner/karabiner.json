{
    "global": { "show_in_menu_bar": false },
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Switch Caps Lock and Escape. Make Caps Lock act as Control when held, Escape when pressed alone.",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [
                                    {
                                        "key_code": "left_control",
                                        "lazy": true
                                    }
                                ],
                                "to_if_alone": [{ "key_code": "escape" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "escape",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [{ "key_code": "caps_lock" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Custom shortcuts from skhd",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "t",
                                    "modifiers": { "mandatory": ["left_command", "left_control"] }
                                },
                                "to": [{ "shell_command": "open -na /Applications/WezTerm.app" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "b",
                                    "modifiers": { "mandatory": ["left_command", "left_control"] }
                                },
                                "to": [{ "shell_command": "open \"/Applications/Arc.app\"" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "s",
                                    "modifiers": { "mandatory": ["left_command", "left_control"] }
                                },
                                "to": [{ "shell_command": "open /System/Applications/Utilities/Screenshot.app" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "a",
                                    "modifiers": { "mandatory": ["left_command", "left_control"] }
                                },
                                "to": [{ "shell_command": "open /Applications/NormCap.app" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "delete_or_backspace",
                                    "modifiers": { "mandatory": ["control"] }
                                },
                                "to": [
                                    {
                                        "key_code": "delete_or_backspace",
                                        "modifiers": ["option"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "devices": [
                {
                    "identifiers": { "is_keyboard": true },
                    "simple_modifications": [
                        {
                            "from": { "apple_vendor_top_case_key_code": "keyboard_fn" },
                            "to": [{ "key_code": "left_control" }]
                        },
                        {
                            "from": { "key_code": "left_control" },
                            "to": [{ "apple_vendor_top_case_key_code": "keyboard_fn" }]
                        }
                    ]
                }
            ],
            "name": "Default profile",
            "selected": true,
            "virtual_hid_keyboard": { "keyboard_type_v2": "iso" }
        }
    ]
}